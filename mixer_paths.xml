<mixer>
  <!-- These are the initial mixer settings -->
    <ctl name="Speaker Switch" value="1" />
    <ctl name="Headphone Switch" value="0" />
    <ctl name="MIXINR IN3R Switch" value="0" />
    <ctl name="Capture Switch" value="0" />
    <ctl name="Digital Capture Volume" value="127" />
    <ctl name="Speaker ZC Switch" value="1" />
    <ctl name="Speaker Boost Volume" value="3" />

  <path name="speaker">
    <ctl name="Speaker Switch" value="1" />
    <ctl name="Speaker Volume" value="127" />
    <ctl name="Headphone Switch" value="0" />
    <ctl name="Digital Playback Volume" value="127" />
    <ctl name="DAC High Performance Switch" value="1" />
    <ctl name="Speaker Mixer Switch" value="1" />

  </path>

  <path name="headphone">
    <ctl name="Speaker Switch" value="0" />
    <ctl name="Headphone Switch" value="1" />
    <ctl name="Headphone Volume" value="127" />
