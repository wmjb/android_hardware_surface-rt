    <ctl name="Capture Volume" value="121" />
    <ctl name="Digital Capture Volume" value="121" />
    <ctl name="Input Mixer Switch" value="1" />
  </path>

  <path name="main-mic-left">
    <ctl name="MIXINR IN3R Switch" value="1" />
    <ctl name="MIXINR IN3R Volume" value="7" />
    <ctl name="Capture Switch" value="1" />
    <ctl name="Capture Volume" value="121" />
    <ctl name="Digital Capture Volume" value="121" />
    <ctl name="Input Mixer Switch" value="1" />
  </path>

  <path name="headset-mic">
    <ctl name="MIXINR IN3R Switch" value="1" />
  </path>
</mixer>
